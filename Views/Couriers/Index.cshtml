@model IEnumerable<DelieveryWebApplication.Courier>

@{
    ViewData["Title"] = "Index";
}

<h1>Кур`єри</h1>

<p>
    <a asp-action="Create">Додати нового кур'єра</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DelieveryTypeNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DelieveryTypeNavigation.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourierId">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.CourierId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.CourierId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
